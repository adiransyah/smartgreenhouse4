<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAtap"
    android:background="#3aa8c1">

    <TextView
        android:id="@+id/tvhead"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:text="KONTROLER ATAP "
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tvhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/container_button"
            android:src="@mipmap/ic_atap" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/container_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_membuka_atap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buka Atap"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_menutup_atap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutup Atap"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>